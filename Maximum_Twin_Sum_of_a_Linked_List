def pairSum(self, head):
        """
        :type head: Optional[ListNode]
        :rtype: int
        """
        if not head.next:
            return head.val
        if not head.next.next:
            return head.next.val+head.val
        #last,start=head.next,head
        #maxx=0
        def reverse(start,last,maxx):
            if not last.next:
                return start,last,maxx
            start,temp,maxx=reverse(start,last.next,maxx)
            add=temp.val+start.val
            maxx=max(maxx,add)
            start=start.next
            return start,last,maxx
            
        start,last,maxx=reverse(head,head.next,0)
        return maxx
